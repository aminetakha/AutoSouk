{
  "name": "autosouk",
  "version": "0.0.0",
  "description": "Morocco's trusted marketplace for cars and mechanics.",
  "main": "src/index.ts",
  "scripts": {
    "start:build": "tsc -w",
    "start:copy": "copyfiles -u 1 'src/**/*.{json,html,css,png,jpg,svg,ejs}' dist/",
    "start:run": "nodemon dist/index.js",
    "start": "concurrently npm:start:*",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:migrate": "drizzle-kit migrate",
    "db:migrate": "concurrently \"npm run drizzle:generate\" && \"npm run drizzle:migrate\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aminetakha/AutoSouk.git"
  },
  "author": "Amine Takha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aminetakha/AutoSouk/issues"
  },
  "homepage": "https://github.com/aminetakha/AutoSouk#readme",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.15.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.1",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}

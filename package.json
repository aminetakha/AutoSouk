{
  "name": "autosouk",
  "version": "0.0.0",
  "description": "Morocco's trusted marketplace for cars and mechanics.",
  "main": "src/index.ts",
  "scripts": {
    "start:build": "tsc",
    "start:copy": "copyfiles -u 1 'src/**/*.{json,html,css,png,jpg,svg,ejs}' dist/",
    "start:run": "node dist/index.js",
    "start": "concurrently npm:start:*",
    "dev": "tsx watch src/index.ts",
    "db:migrate": "drizzle-kit migrate",
    "test": "docker compose -f ./docker-compose-test.yml up -d && jest --watchAll -no-cache",
    "test-dev": "jest --watchAll -no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aminetakha/AutoSouk.git"
  },
  "author": "Amine Takha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aminetakha/AutoSouk/issues"
  },
  "homepage": "https://github.com/aminetakha/AutoSouk#readme",
  "dependencies": {
    "cookie-session": "^2.1.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.15.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.49",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.1",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
